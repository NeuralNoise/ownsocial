	<div id="head_box">
		<div id="head_box_inner">
			<a href="/"><?= $this->escape($this->_config['site_title']['value']); ?></a>
			<?php if ($this->_currentUser): ?>
			<div class="right_box">
				Angemeldet als: <a href="/profile/me/"><?= $this->escape($this->_currentUser->getFirstName() . ' ' . $this->_currentUser->getLastName()); ?></a> &bull;
				<a href="/index/logout/">Abmelden</a>
			</div>
			<?php endif; ?>
		</div>
	</div>

	<div id="page_container">

		<?php if ($this->_currentUser): ?>
		<div id="left_box">

			<a href="/profile/me/"><?= $this->escape($this->_currentUser->getFirstName() . ' ' . $this->_currentUser->getLastName()); ?></a>

			<div class="groups">
				<ul>
					<li><a href="#" class="add-group-dialog">Neue Gruppe</a></li>
				<?php if ($groups = $this->_currentUser->getGroups()): ?>
				<?php foreach ($groups as $group): ?>
					<li><a href="/group/?id=<?= $group->getId(); ?>"><?= $this->escape($group->getName()); ?></a></li>
				<?php endforeach; ?>
				<?php endif; ?>
				</ul>
			</div>
		</div>
		<?php endif; ?>

		<div id="middle_box">
			<?= $html; ?>
		</div>

		<?php if ($this->_currentUser): ?>
		<div id="right_box">
			<?php if ($contacts = $this->_currentUser->getUnconfirmedContacts()): ?>
			<div class="unconfirmed_contacts">
				<p class="headline">KONTAKTANFRAGEN</p>
				<?php foreach ($contacts as $contact): ?>

				<div class="unconfirmed_contact">
					<img class="portrait" src="/file/?file=<?= $contact->getPortraitFileId(); ?>" />
					<?= $this->escape($contact->getFirstName() . ' ' . $contact->getLastName()); ?>
					<br />
					<a href="#" class="accept_request" data-id="<?= $contact->getId(); ?>">Annehmen</a>
					<a href="#" class="decline_request" data-id="<?= $contact->getId(); ?>">Ablehnen</a>
				</div>
				<?php endforeach; ?>
			</div>
			<?php endif; ?>
		</div>
		<?php endif; ?>
	</div>
